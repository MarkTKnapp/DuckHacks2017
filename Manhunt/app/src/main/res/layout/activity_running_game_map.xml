<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMapActivity">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.marktknapp.manhunt.RunningGameMapActivity" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_game_time"
        android:maxWidth="200dp"
        android:minWidth="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:minHeight="34dp"
        android:textSize="36sp" />

    <Button
        android:text="Jailbreak"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/caught_button"
        android:layout_toEndOf="@+id/caught_button"
        android:id="@+id/break_button"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:minWidth="200dip"
        android:minHeight="60dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_game_time"
        android:layout_alignStart="@+id/text_game_time"
        android:id="@+id/jailCnt"
        tools:textSize="24sp" />

    <Button
        android:text="CAUGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caught_button"
        android:minWidth="200dip"
        android:minHeight="60dp"
        android:textSize="24sp"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
